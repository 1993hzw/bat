<!DOCTYPE html>
<% if(id<=0){ var isEdit=false;}else{ var isEdit=true;} %>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>发布文章</title>
    <link rel="stylesheet" href="/css/publish.css">
    <script src="/js/jquery1.3.2.js"></script>
    <script src="/js/publish.js"></script>
    <script src="/js/markdown.js"></script>
</head>
<body>
<div>
     <% if(isEdit){ %>
      <div id="blog" style="display:none"><%= id %></div>
     <% } %>
    <div class="topbar-container">
        <div class="bar">
        <a href="/">
            <a href="/" class="logo"><img src="/img/logo.png" style="height: 60px;float: left"></a>
        </a>
       <!-- <a href="/blogs">
            <div class="btn-list">文章</div>
        </a>-->
        <% if(!isEdit){ %>
        <div class="btn-new">新建</div>
        <% }else{ %>
        <div class="btn-edit">编辑</div>
        <% } %>
        <div class="options-container">
            <% if(!isEdit){ %>
            <input type="button" class="btn-publish" value="发&nbsp;布">
            <% }else{ %>
            <input type="button" class="btn-finish" value="保&nbsp;存">
            <% } %>
        </div>
        <div class="clearFloat"></div>
        </div>
        <div class="title-container">
            <div class="tag-container">
                <!--<input type="button" class="selector-tag" value="tag">-->
                <select class="selector-tag">
                    <% for(var i in tags){ %>
                    <% if(isEdit&&tag==i){ %>
                    <option selected value="<%= i %>"> &nbsp;<%= tags[i] %></option>
                    <% }else{ %>
                    <option value="<%= i %>" > &nbsp;<%= tags[i] %></option>
                    <% } %>
                    <% } %>
                    <option style="color: gray;" value="-1">&nbsp;+新增 </option>
                </select>
            </div>
            <div class="input-title-container">
                <% if(isEdit){ %>
                <input type="text" class="input-title" value="<%= title %>"/>
                <% }else{ %>
                <input type="text" class="input-title"/>
                <% } %>
            </div>
            <div class="clearFloat"></div>
        </div>
    </div>
    <div class="edit-container">
        <div class="inupt-container">
            <form>
                <% if(isEdit){ %>
                <textarea class="textarea"><%= markdown %></textarea>
                <% }else{ %>
                <textarea class="textarea"></textarea>
                <% } %>
            </form>
        </div>
        <div class="resize-border"></div>
        <div id="preview-container" class="preview-container">
            <div class="preview"></div>
            <div class="btn-preview-container">
                <div class="btn-preview"> > </div>
            </div>
        </div>
        <div class="clearFloat"></div>
    </div>

    <style>
        #dialog{
            display: none;
        }
        .dialog-bg{
            filter: alpha(opacity=50);
            -moz-opacity:0.5;
            opacity: 0.5;
            position: fixed;background:black;top: 0;left: 0;width: 100%;height: 100%;
        }
        .dialog-container{
            position: fixed;background:transparent;top: 0;left: 0;width: 100%;height: 100%;
        }
        .dialog-body{
            margin-top: 100px;margin-left:auto;margin-right:auto;display: table;color: black;text-align: center
        }
        .dialog-content{
            padding-top: 25px;
            background: white;width: 300px;height: 120px;font-size: 24px;font-weight: bold;border-bottom: 2px solid #ddd;
        }
        .input-tag{
            font-size: 20px;
            padding-left: 5px;
            margin-top: 5px;
            width: 80%;
            border: 1px solid gray;
            height: 40px;
            line-height: 40px;
        }
        .dialog-btn-container{
            display: table;line-height: 40px
        }
        .dialog-btn{
            float: left;
            border: 0;
            padding: 0;
            margin: 0;
            background: cornflowerblue;width: 150px;height: 40px;font-size: 20px;
        }
        .dialog-btn:hover{
            background: deepskyblue;
            cursor: pointer;
        }
    </style>
    <div id="dialog">
        <div class="dialog-bg"></div>
        <div class="dialog-container">
            <div class="dialog-body">
                <div id="content" class="dialog-content">
                    <div id="tip">请输入标签名</div>
                    <input type="text" class="input-tag">
                </div>
                <div class="dialog-btn-container">
                    <div id="cancel" class="dialog-btn">取消</div>
                    <div id="enter" class="dialog-btn">确定</div>
                </div>
            </div>
        </div>
    </div>


</div>
</body>
</html>